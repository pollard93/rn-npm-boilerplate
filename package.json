{
  "name": "mpb-components-react-native-npm-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate to quickstart React Native component development",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "format:clean": "rm -rf dist",
    "prepare": "run-s format:clean build",
    "test": "run-s test:lint test:unit",
    "test:lint": "./node_modules/.bin/eslint \"./**/*.{js,ts,tsx}\"",
    "test:package": "npx scriptlint --strict",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-jest": "^25.1.0",
    "chai": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^25.1.0",
    "jest-enzyme": "^7.1.2",
    "mock-async-storage": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "scriptlint": "^2.0.4",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.1.4"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "peerDependencies": {
    "react": ">= 16.3.0",
    "react-dom": ">= 16.3.0",
    "react-native": ">= 0.60.5"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ]
  },
  "dependencies": {
    "eslint-plugin-react-native": "^3.8.1",
    "react-native": "0.60.5"
  }
}